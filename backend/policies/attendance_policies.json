{
  "minimum_requirements": {
    "lecture_attendance": 75,
    "lab_attendance": 80,
    "tutorial_attendance": 70,
    "practical_attendance": 85
  },
  "warning_thresholds": {
    "first_warning": 70,
    "second_warning": 65,
    "final_warning": 60,
    "critical_threshold": 50
  },
  "consequences": {
    "below_75": "not_eligible_for_exam",
    "below_50": "repeat_course",
    "below_60": "parent_notification_required"
  },
  "calculation_rules": {
    "exclude_holidays": true,
    "count_late_as": 0.5,
    "medical_leave_exemption": true,
    "attendance_percentage_formula": "(present_sessions / total_sessions) * 100"
  },
  "session_types": {
    "lecture": {
      "weight": 1.0,
      "minimum_duration_minutes": 45,
      "late_threshold_minutes": 15
    },
    "lab": {
      "weight": 1.2,
      "minimum_duration_minutes": 90,
      "late_threshold_minutes": 30
    },
    "tutorial": {
      "weight": 0.8,
      "minimum_duration_minutes": 60,
      "late_threshold_minutes": 10
    }
  },
  "marking_rules": {
    "present": {
      "code": "P",
      "value": 1.0,
      "description": "Student attended the full session"
    },
    "absent": {
      "code": "A",
      "value": 0.0,
      "description": "Student was not present"
    },
    "late": {
      "code": "L",
      "value": 0.5,
      "description": "Student arrived late but attended"
    },
    "excused": {
      "code": "E",
      "value": 1.0,
      "description": "Student absent with valid excuse"
    }
  },
  "notification_rules": {
    "low_attendance_warning": {
      "threshold": 70,
      "recipients": ["student", "faculty"],
      "frequency": "weekly"
    },
    "critical_attendance_alert": {
      "threshold": 60,
      "recipients": ["student", "faculty", "parent"],
      "frequency": "immediate"
    }
  }
}
